@*Edit modal*@
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editRecipeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editRecipeModalLabel">Edit recipe</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="p-1 pb-3" asp-action="EditRecipe" method="post" >
                    <div class="mb-3">
                        <label for="recipeName" class="form-label">Recipe Name</label>
                        <input type="text" class="form-control" id="recipeName" name="recipeName" disabled required>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>

                            <input type="text" class="form-control" id="category" name="category" disabled required>
                    </div>
                    <div class="mb-3">
                        <label for="ingredients" class="form-label">Ingredients</label>
                        <div class="form-floating">
                            <textarea class="form-control p-2" id="ingredients" name="ingredients" required></textarea>
                        </div>
                        <span class="text-danger">*Please enter ingredient names seperated by comma</span>
                    </div>
                    <div class="mb-3">
                        <label for="cookingProcess" class="form-label">Cooking Process</label>
                        <div class="form-floating">
                            <textarea class="form-control p-2" id="cookingProcess" name="cookingProcess" style="height: 150px" required></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
        function openModal(name,category,ingredients,procedure) {
            document.getElementById("recipeName").value = "" +name  + ""
            document.getElementById('category').value = category;
            document.getElementById("ingredients").value = ""+ingredients+""
            document.getElementById("cookingProcess").value = ""+procedure+""
           
        }
    </script>
</body>